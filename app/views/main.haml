%h1 This is ng-minesweeper

.content{:"ng-controller" => "MainCtrl as main"}
  .parameters
    %input{:"ng-model" => "main.gridWidth", :"placeholder" => "Grid Width", :"type" => "number", :"required" => "true"}
    %span &times
    %input{:"ng-model" => "main.gridHeight", :"placeholder" => "Grid Height", :"type" => "number", :"required" => "true"}
    %span and
    %input{:"ng-model" => "main.numOfMines", :"placeholder" => "How many mines?", :"type" => "number", :"required" => "true"}
    %button{:"ng-click" => "main.generate(main.gridWidth, main.gridHeight, main.numOfMines)"} Go!
    %button{:"ng-click" => "main.save()"} Save
  %hr
  .grid-wrapper
    .status-bar
      %input{:"ng-value" => "main.grid.numMines - main.grid.numMarked", :"readonly" => "true"}
    %table{:"class" => "grid"}
      %tr{:"ng-repeat" => "row in main.grid.board track by $index"}
        %td{:"ng-repeat" => "tile in row track by $index"}
          %tile{:"x" => "{{$parent.$index}}", :"y" => "{{$index}}", :"grid" => "main.grid", :"tile" => "tile"}

